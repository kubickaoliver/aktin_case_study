<odoo>
    <!-- Form View -->
    <record id="course_course_view_form" model="ir.ui.view">
        <field name="name">online_course.course.form</field>
        <field name="model">online_course.course</field>
        <field name="arch" type="xml">
            <form string="Online Course">
                <header>
                    <button name="action_publish" type="object" string="Publish" class="oe_highlight" invisible="state != 'draft'" groups="online_course.group_online_course_teacher"/>
                    <button name="action_archive" type="object" string="Archive" invisible="state != 'published'" groups="online_course.group_online_course_teacher"/>
                    <button name="action_reset_to_draft" type="object" string="Return to Draft" invisible="state == 'draft'" groups="online_course.group_online_course_teacher"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,published,archived"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <label for="name" string="Course Name"/>
                            <field name="name" placeholder="Course Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="teacher_id" placeholder="Select a teacher..."/>
                            <label for="price"/>
                            <div class="o_row">
                                <field name="currency_id" invisible="1"/>
                                <field name="price" widget="monetary"/>
                                <label for="is_paid"/>
                                <field name="is_paid" readonly="1"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <group string="Description">
                                <field name="description" placeholder="Detailed description of the course..." nolabel="1" />
                            </group>
                            <group>
                                <field name="capacity"/>
                            </group>
                        </page>
                        <page string="Enrollments" groups="online_course.group_online_course_teacher">
                            <group string="Enrolled Students">
                                <field name="enrollment_ids" nolabel="1">
                                    <list create="false" delete="true">
                                        <field name="student_id" />
                                        <field name="state" widget="badge" />
                                        <field name="enrollment_date" />
                                    </list>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List (Tree) View -->
    <record id="course_course_view_list" model="ir.ui.view">
        <field name="name">online_course.course.list</field>
        <field name="model">online_course.course</field>
        <field name="arch" type="xml">
            <list string="Courses">
                <field name="name"/>
                <field name="teacher_id"/>
                <field name="price"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="course_course_view_kanban" model="ir.ui.view">
        <field name="name">online_course.course.kanban</field>
        <field name="model">online_course.course</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_dashboard">
                <field name="name"/>
                <field name="teacher_id"/>
                <field name="state"/>
                <field name="price"/>
                <field name="capacity"/>
                <field name="enrollments_count"/>
                <field name="is_current_user_enrolled"/>
                <field name="currency_id"/>
                <field name="can_enroll"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click overflow-hidden">

                            <t t-if="record.state.raw_value == 'published' or record.state.raw_value == 'draft'">
                                <div class="o_kanban_ribbon_wrapper">
                                    <div t-attf-class="o_kanban_ribbon bg-#{record.state.raw_value == 'published' ? 'success' : 'secondary'}">
                                        <span t-esc="record.state.value"/>
                                    </div>
                                </div>
                            </t>

                            <div class="o_kanban_record_top mb-2">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <span><t t-esc="record.name.value"/></span>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_subtitle text-muted ps-1">
                                    &#160;by <t t-esc="record.teacher_id.value"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="currency_id" invisible="1"/>
                                <div>Price: <field name="price" widget="monetary"/></div>

                                <div t-if="record.capacity.raw_value > 0">
                                    Capacity: <t t-esc="record.enrollments_count.raw_value"/> / <t t-esc="record.capacity.raw_value"/>
                                </div>
                                <div t-else="">
                                    Capacity: <span>∞</span>
                                </div>
                            </div>

                            <div class="oe_kanban_bottom mt-2 d-flex justify-content-end">
                                 <button name="action_enroll" type="object"
                                    class="btn btn-primary btn-sm"
                                    context="{}"
                                    invisible="not can_enroll">
                                    <span>Enroll</span>
                                </button>
                                 <button name="action_unenroll" type="object"
                                    class="btn btn-secondary btn-sm"
                                    invisible="not is_current_user_enrolled">
                                    <span>Unenroll</span>
                                </button>
                            </div>

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>