<odoo>
    <record id="res_users_view_form_inherit_course" model="ir.ui.view">
        <field name="name">res.users.form.inherit.course</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_open_courses"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-graduation-cap"
                    invisible="taught_course_count == 0">
                    <field name="taught_course_count" widget="statinfo" string="Courses taught"/>
                </button>
            </div>
            <xpath expr="//field[@name='login']" position="after">
                <label for="is_teacher"/>
                <field name="is_teacher"/>
            </xpath>
        </field>
    </record>
</odoo>